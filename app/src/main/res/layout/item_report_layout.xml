<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:elevation="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:textColor="@color/green"
                android:fontFamily="@font/ubuntu_bold"
                android:layout_height="wrap_content"
                android:text="Date: "/>

            <TextView
                android:id="@+id/valDate"
                android:layout_toEndOf="@id/txtDate"
                android:layout_width="wrap_content"
                android:fontFamily="@font/ubuntu_regular"
                android:layout_height="wrap_content"
                android:text="11/01/2004"/>

            <TextView
                android:id="@+id/txtStatus"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="50dp"
                android:textColor="@color/green"
                android:layout_width="wrap_content"
                android:fontFamily="@font/ubuntu_bold"
                android:layout_height="wrap_content"
                android:text="Status: "/>

            <TextView
                android:id="@+id/valStatus"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/ubuntu_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal"/>

            <TextView
                android:id="@+id/txtPh"
                android:layout_below="@id/txtDate"
                android:layout_marginTop="5dp"
                android:textColor="@color/green"
                android:fontFamily="@font/ubuntu_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pH: "/>

            <TextView
                android:id="@+id/valPh"
                android:layout_toEndOf="@id/txtPh"
                android:layout_below="@id/txtDate"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/ubuntu_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7.19"/>

            <TextView
                android:id="@+id/txtTemp"
                android:layout_below="@id/txtPh"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/ubuntu_bold"
                android:textColor="@color/green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temp: "/>

            <TextView
                android:id="@+id/valTemp"
                android:layout_toEndOf="@id/txtTemp"
                android:layout_below="@id/txtPh"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/ubuntu_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18.67"/>

            <TextView
                android:id="@+id/txtTurbidity"
                android:layout_below="@id/txtTemp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/ubuntu_bold"
                android:textColor="@color/green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turbidity: "/>

            <TextView
                android:id="@+id/valTurbidity"
                android:layout_toEndOf="@id/txtTurbidity"
                android:layout_below="@id/txtTemp"
                android:fontFamily="@font/ubuntu_regular"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80%"/>

            <TextView
                android:id="@+id/txtTime"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/txtTemp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/ubuntu_bold"
                android:textColor="@color/green"
                android:layout_marginEnd="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time: "/>

            <TextView
                android:id="@+id/valTime"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/txtTemp"
                android:fontFamily="@font/ubuntu_regular"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:36:01 "/>


        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>